---
layout: base.njk
title: Updates
---

<div class="updates-container">
    <h1>Latest Updates</h1>
    
    {% if collections.updates.length %}
        <div class="updates-list">
            {% for update in collections.updates %}
                <div class="update-item">
                    <h2>{{ update.data.title }}</h2>
                    <div class="update-date">{{ update.date | formatDate }}</div>
                    <div class="update-content">
                        {{ update.content | safe }}
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <p>No updates available yet. Please check back soon.</p>
    {% endif %}
</div>