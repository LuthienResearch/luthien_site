<style>
  .button-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
    text-align: left;
    max-width: 900px;
  }
  
  .option {
    border: 1px solid #333;
    border-radius: 8px;
    padding: 1.5rem;
    background-color: #151b24;
  }
  
  .option h3 {
    font-size: 1rem;
    margin-top: 0;
    margin-bottom: 1rem;
    color: #c9d1d9;
  }
  
